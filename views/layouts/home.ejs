<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToyHub | Home Page</title>
    <!-- include tailwind  -->
     <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include("../partials/header") -%>
    
    <!--! Hero Section -->

<div class="relative h-[500px] flex items-center py-20 mt-10 w-10/12 mx-auto px-20 rounded-3xl bg-cover bg-bottom .slide" style="background-image: url('/images/Banner/banner-4.jpg');">
    <div class="container mx-auto px-6">
        <div class="w-full md:w-2/3 lg:w-1/2">
            <h1 class="text-5xl text-white font-bold leading-tight">
                High Quality Toys <br />Big Discount
            </h1>
            <p class="text-white text-lg mt-4">Save up to 50% off on your first order</p>
            <form class="mt-8">
                <div class="flex">
                    <input type="email" placeholder="Your email address"
                        class="w-full px-4 py-2 text-gray-900 rounded-l-lg border border-gray-300 focus:outline-none" />
                    <button
                        class="bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-r-lg transition duration-300">
                        Subscribe
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Slider controls -->
    <div class="absolute top-1/2 transform -translate-y-1/2 left-10 flex items-center">
        <button class="bg-white p-2 rounded-full shadow-lg" onclick="prevSlide()">
            <svg class="h-6 w-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 19l-7-7 7-7"></path>
            </svg>
        </button>
    </div>
    <div class="absolute top-1/2 transform -translate-y-1/2 right-10 flex items-center">
        <button class="bg-white p-2 rounded-full shadow-lg" onclick="nextSlide()" >
            <svg class="h-6 w-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
            </svg>
        </button>
    </div>
</div>

<!-- !Featured Categories -->
 
<section class="bg-gray-100 py-8">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl  font-semibold mb-4">Featured Categories</h2>
            <div class="flex space-x-6 overflow-x-scroll no-scrollbar ">
                
                <% locals.categories.forEach(category => { %>
                <div class="bg-white shadow-lg rounded-lg p-4 w-80">
                    <img src="<%= category.image %>" alt="<%= category.name %>" class="h-24 w-full object-cover rounded-t-lg">
                    <h3 class="text-lg font-semibold mt-2"><%= category.name %></h3>
                    <p class="text-gray-500"><%= category.items %> items</p>
                </div>
        <% }) %>
        </div>
    </div>
</section>

<!--! Popular Products -->

<section class="bg-white py-8">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl font-semibold mb-6">Popular Products</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 xl:grid-cols-6 gap-6">
            <% popularProducts.forEach(product => { %>
            <div class="bg-white shadow-lg rounded-lg p-4">
                <!-- Discount Badge -->
                <div class="relative">
                    <% if (product.oldPrice) { %>
                    <div class="absolute top-0 left-0 bg-orange-400 text-white text-xs font-semibold py-1 px-3 rounded-br-lg">
                        -<%= Math.round(((product.oldPrice - product.price) / product.oldPrice) * 100) %>%
                    </div>
                    <% } %>
                    <!-- Product Image -->
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="h-40 w-full object-cover rounded-t-lg">
                </div>
                
                <div class="p-2">
                    <!-- Category -->
                    <p class="text-sm text-gray-500"><%= product.category %></p>

                    <!-- Product Name -->
                    <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>

                    <!-- Rating and Manufacturer -->
                    <div class="flex items-center ">
                        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12 .587l3.668 7.568L23.327 9.7l-5.664 5.328 1.336 7.8L12 18.839l-7 3.989 1.336-7.8L.673 9.7l7.659-1.545z"/>
                        </svg>
                        <span class="ml-1 text-sm text-gray-600">(<%= product.rating %>)</span>
                    </div>

                    <!-- Manufacturer -->
                    <p class="text-sm text-gray-500 ">By <span class="text-green-500"><%= product.manufacturer %></span></p>

                    <!-- Pricing -->
                    <div class=" flex items-center">
                        <span class="text-lg font-bold text-green-600">$<%= product.price %></span>
                        <% if (product.oldPrice) { %>
                        <span class="text-sm text-gray-500 line-through ml-2">$<%= product.oldPrice %></span>
                        <% } %>
                    </div>

                    <!-- Add to Cart Button -->
                    <div class="flex  justify-evenly">
                        <button class="mt-4 w-4/3 bg-primary text-white font-semibold py-2 px-4 rounded-lg transition duration-300 flex items-center justify-center">
                            <svg class="w-5 h-5 mr-1" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M10 9V5a5 5 0 0 1 10 0v4h1a3 3 0 0 1 3 3v9a3 3 0 0 1-3 3H3a3 3 0 0 1-3-3v-9a3 3 0 0 1 3-3h1V5a7 7 0 0 1 14 0v4h-2V5a5 5 0 0 0-10 0v4h-1a1 1 0 0 0-1 1v9h2v-9a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v9a1 1 0 0 0 1 1h16a1 1 0 0 0 1-1v-9a1 1 0 0 0-1-1h-1v9h2v-9a3 3 0 0 0-3-3h-1zM3 22a1 1 0 0 0 1 1h16a1 1 0 0 0 1-1v-1H3v1z"/>
                            </svg>
                            Add to cart
                        </button>
                        <button>
                            <svg class="mt-4" style="width: 2em; height: 1.5em;  vertical-align: middle; fill: black; overflow: hidden;" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                <path d="M512 898.56l-9.813333-4.693333C485.546667 884.906667 85.333333 679.68 85.333333 384c0-115.626667 53.76-202.666667 147.2-239.36C325.546667 108.373333 435.2 132.266667 512 203.52c76.8-71.253333 186.88-95.146667 279.466667-58.88C884.906667 181.333333 938.666667 268.373333 938.666667 384c0 295.68-400.213333 501.333333-416.853334 509.866667l-9.813333 4.693333zM322.986667 170.24c-25.6 0-51.2 4.693333-75.093334 14.08C171.52 214.186667 128 286.72 128 384c0 245.333333 323.413333 433.493333 384 466.346667 60.586667-32.853333 384-221.013333 384-466.346667 0-96.853333-43.52-169.813333-119.893333-199.68-83.2-32.426667-183.04-6.826667-248.32 64l-15.786667 17.066667-15.786667-17.066667c-46.506667-50.346667-110.08-78.08-173.226666-78.08z"  />
                            </svg>
                        </button>
                        
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>


<!-- Daily Best Sells -->
<section class="py-8">
    <div class="container mx-auto px-6">
        <h2 class="text-2xl font-bold mb-4">Daily Best Sells</h2>
        <div class="bg-blue-100 p-14 my-10 rounded-lg flex items-center">
            <div>
                <h3 class="text-2xl font-semibold text-gray-900 mb-4">Bring life into your home</h3>
                <a href="#"
                    class="inline-block bg-green-500 text-white px-4 py-2 rounded-lg font-medium">Shop Now</a>
            </div>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
            <!-- Promotional Banner -->
            <!-- Product Cards -->
            <% bestSellarProducts.forEach(product => { %>
            <div class="bg-white shadow-lg rounded-lg p-4">
                <div class="relative">
                    <% if (product.discount) { %>
                    <span
                        class="absolute top-2 left-2 bg-green-500 text-white text-xs font-bold px-2 py-1 rounded-full">Save
                        <%= product.discount %>%</span>
                    <% } %>
                    <img src="<%= product.image %>" alt="<%= product.name %>"
                        class="w-full h-40 object-cover rounded-t-lg">
                </div>
                <div class="p-4">
                    <h3 class="text-sm font-semibold text-gray-700"><%= product.name %></h3>
                    <p class="text-xs text-gray-500"><%= product.brand %></p>
                    <div class="flex items-center mt-2">
                        <span class="text-lg font-semibold text-green-600">$<%= product.price %></span>
                        <% if (product.oldPrice) { %>
                        <span class="text-gray-400 line-through ml-2">$<%= product.oldPrice %></span>
                        <% } %>
                    </div>
                    <div class="mt-2">
                        <p class="text-xs text-gray-500">Sold: <%= product.sold %>/<%= product.stock %></p>
                        <div class="w-full bg-gray-200 rounded-full h-1.5">
                            <div class="bg-green-500 h-1.5 rounded-full" id="soldBar" style="width:10%" ></div>

                            <!-- <script>
                                    let soldBar = document.getElementById('soldBar');
                                    soldBar.style.width =  <%= //(locals.product.sold / locals.product.stock) * 100%>%
                                    </script> -->
                        </div>
                    </div>
                    <button
                        class="mt-4 bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 w-full">
                        Add To Cart
                    </button>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>



<%- include("../partials/footer") -%>


    <script>
    let currentSlide = 0;
    const slides = document.querySelectorAll('.slide'); // Assuming you have slide elements

    function showSlide(index) {
        slides.forEach((slide, i) => {
            slide.style.display = (i === index) ? 'block' : 'none';
        });
    }

    function nextSlide() {
        currentSlide = (currentSlide + 1) % slides.length;
        showSlide(currentSlide);
    }

    function prevSlide() {
        currentSlide = (currentSlide - 1 + slides.length) % slides.length;
        showSlide(currentSlide);
    }

    showSlide(currentSlide); // Initialize the first slide


    
</script>
</body>
</html>