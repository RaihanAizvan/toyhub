<section class="bg-gray-100 py-8">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl font-semibold mb-4">Featured Categories</h2>
        <div class="flex space-x-6 overflow-x-scroll no-scrollbar">
            <% if(locals.categories ) { %>
                <% categories.forEach(category => { %> 
                    <div class="bg-white shadow-lg hover:shadow-2xl hover:bg-gray-100 transition-all duration-300 rounded-lg p-4 w-96">
                        <a href="/user/category/<%= category.id %>">
                            <img src="<%= category.image %>" alt="<%= category.name %>" class="h-20 transition-all duration-300 w-full hover:w-11/12 object-contain rounded-t-lg">
                            <h3 class="text-lg font-semibold text-center mt-2">
                                <%= category.name %>
                            </h3>
                            <p class="text-center text-gray-500">
                                <%= category.items %> items
                            </p>
                        </a>
                    </div>
                <% }); %>
                <div class="bg-white shadow-lg hover:shadow-2xl hover:bg-gray-100 transition-all duration-300 rounded-lg p-4 w-96">
                    <a href="/categories/all">
                        <div class="flex flex-col items-center justify-center h-full">
                            <i class="fas fa-chevron-right h-20 transition-all duration-300 w-full text-center flex items-center justify-center hover:w-11/12 object-contain rounded-t-lg"></i>
                            <h3 class="text-lg font-semibold text-center mt-2">
                                Browse All Categories
                            </h3>
                            <p class="text-center text-gray-500">
                                Explore all available categories
                            </p>
                        </div>
                    </a>
                </div>
                <% } else { %>
                    <p>No categories available</p>
                <% } %>
            </div>
    </div>
</section>