<%- include("./header") -%>
<div class="py-24 flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Forgot Password</h2>
        
        <% if (typeof message !== 'undefined') { %>
            <div class="mb-4 p-3 rounded bg-red-100 text-red-700">
                <%= message %>
            </div>
        <% } %>

        <form action="/user/forgot-password" method="POST">
            <div class="mb-4">
                <label for="email" class="block text-gray-700 text-sm font-medium mb-2">Email Address</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500"
                    placeholder="Enter your email address"
                >
            </div>

            <button 
                type="submit"
                class="w-full bg-primary text-white py-2 px-4 rounded-md  transition duration-200"
            >
                Send Reset OTP
            </button>
        </form>

        <div class="mt-4 text-center">
            <a href="/user/login" class="text-sm text-primary ">Back to Login</a>
        </div>
    </div>
</div>

<%- include("./footer") -%>
