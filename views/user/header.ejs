                    <span class="hamburger-line line2 w-6 h-0.5 bg-gray-800 block rounded-full"></span>
                    <span class="hamburger-line line3 w-6 h-0.5 bg-gray-800 block rounded-full"></span>
                </button>
            </div>
        </div>
        <!-- Mobile Search -->
        <div id="mobileSearch" class="p-4 border-b border-gray-100 hidden relative">
            <div class="flex items-center bg-gray-50 rounded-lg px-3 py-2">
