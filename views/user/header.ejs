<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    // --- UI Interactions ---

    // Hamburger Logic
    const hamburgerBtn = document.getElementById("hamburgerButton");
    const mobileMenu = document.getElementById("mobileMenu");

    hamburgerBtn.addEventListener("click", () => {
        const isExpanded = mobileMenu.classList.contains("show");

        if (isExpanded) {
            mobileMenu.classList.remove("show");
            hamburgerBtn.classList.remove("hamburger-active");
        } else {
            mobileMenu.classList.add("show");
            hamburgerBtn.classList.add("hamburger-active");
        }
    });
    // toggle mobile search bar
    const mobileSearchBtn = document.getElementById('mobileSearchBtn');
    const mobileSearchBar = document.getElementById('mobileSearch');

    mobileSearchBtn.addEventListener('click', () => {
        mobileSearchBar.classList.toggle('hidden');
    });

    // unified search logic
    const desktopInput = document.getElementById('searchInput');
    const mobileInput = document.getElementById('mobileSearchInput');
    const suggestions = document.getElementById('suggestions');
    let debounceTimer;

    function attachSearchEvents(input) {
        if (!input) return;

        input.addEventListener('input', function () {
            clearTimeout(debounceTimer);

            const value = this.value.trim();
            const sanitized = value.replace(/[*\/${}]/g, '');
            this.value = sanitized;

            if (sanitized.length < 2) {
                suggestions.classList.add('hidden');
                suggestions.innerHTML = '';
                return;
            }

            debounceTimer = setTimeout(() => {
                positionSuggestionsBelow(this);
                handleSearchInput(sanitized);
            }, 100);

        });

        input.addEventListener('keydown', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                searchItem(this.value);
            }
        });
    }

    attachSearchEvents(desktopInput);
    attachSearchEvents(mobileInput);

    // close suggestions when clicking outside
    document.addEventListener('click', (e) => {
        const clickedInsideDesktop = desktopInput && desktopInput.contains(e.target);
        const clickedInsideMobile = mobileInput && mobileInput.contains(e.target);
        const clickedInsideSuggestions = suggestions.contains(e.target);

        if (!clickedInsideDesktop && !clickedInsideMobile && !clickedInsideSuggestions) {
            suggestions.classList.add('hidden');
        }
    });

    // suggestions
    function positionSuggestionsBelow(input) {
        const rect = input.getBoundingClientRect();

        suggestions.style.position = 'fixed';
        suggestions.style.top = `${rect.bottom + 6}px`;
        suggestions.style.left = `${rect.left}px`;
        suggestions.style.width = `${rect.width}px`;
    }


    // --- API Logic ---

    function handleSearchInput(value) {
        if (!value) return;

        axios.get(`/search/?q=${encodeURIComponent(value)}`)
            .then(response => {
                const data = response.data;

                if (!data || (Array.isArray(data) && data.length === 0)) {
                    suggestions.innerHTML = `
                        <div class="p-4 text-center text-gray-500">
                            <i class="far fa-sad-tear text-2xl mb-2 block"></i>
                            <span class="text-sm">No items found</span>
                        </div>`;
                    suggestions.classList.remove('hidden');
                    return;
                }

                if (Array.isArray(data)) {
                    suggestions.innerHTML = data.map(item => `
                        <div class="px-4 py-3 cursor-pointer hover:bg-green-50 border-b border-gray-50 last:border-0 flex items-center transition-colors" 
                            onclick="searchItem('${item.name?.replace(/'/g, "\\'")}')">
                            <div class="bg-gray-100 rounded p-2 mr-3 text-green-600">
                                <i class="fas fa-tag text-xs"></i>
                            </div>
                            <span class="text-sm font-medium text-gray-700">${item.name || 'Unnamed Item'}</span>
                        </div>
                    `).join('');
                    suggestions.classList.remove('hidden');
                }
            })
            .catch(error => {
                console.error('Search error:', error);
            });
    }

    function searchItem(query) {
        if (!query) return;
        window.location.href = `/search/results?q=${encodeURIComponent(query.trim())}`;
    }

    // Logout Logic (Preserved SweetAlert)
    function logout() {
        Swal.fire({
            title: 'Ready to Take Off?',
            text: "Your adventure with us is pausing for now!",
            icon: 'info',
            iconColor: '#19D16F',
            showCancelButton: true,
            confirmButtonText: 'Yes, Get Me Out!',
            cancelButtonText: 'Wait, Not Yet!',
            confirmButtonColor: '#19D16F',
            cancelButtonColor: '#ff6b6b',
            background: '#fff',
            backdrop: `rgba(25, 209, 111, 0.1)`,
            // Removed image form backdrop to keep it cleaner, added color tint
            showClass: { popup: 'animate__animated animate__fadeInDown' },
            hideClass: { popup: 'animate__animated animate__fadeOutUp' }
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Preparing for Departure!',
                    text: 'Saving your progress...',
                    timer: 1500,
                    timerProgressBar: true,
                    didOpen: () => { Swal.showLoading() }
                }).then(() => {
                    window.location.href = '/user/logout';
                })
            }
        });
    }
</script>