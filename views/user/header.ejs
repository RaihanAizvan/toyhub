            </div>
        </div>


        <!-- ! GLOBAL Suggestions Dropdown (works for desktop + mobile) -->
        <div id="suggestions" class="hidden bg-white rounded-xl shadow-2xl border border-gray-100 z-50 absolute">
        </div>


        <!-- 4. Secondary Navigation (Desktop) -->
        <nav class="hidden md:flex justify-center mt-2 border-t border-gray-200 pt-3">
            <ul class="flex gap-10">
