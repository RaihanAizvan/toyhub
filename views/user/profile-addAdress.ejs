<%- include('profile-sidebar'); %>
<div class="ml-64 md:ml-80 p-6">
  <h1 class="text-2xl font-semibold mb-4">Add New Address</h1>
  <form id="addAddressForm" action="/save-address" method="POST" class="space-y-4">
    <div>
      <label for="name" class="block text-sm">Name</label>
      <input type="text" id="name" name="name" class="w-full border border-gray-300 p-2 rounded" required>
    </div>
    <div>
      <label for="contactDetails" class="block text-sm">Contact Details</label>
      <input type="text" id="contactDetails" name="contactDetails" class="w-full border border-gray-300 p-2 rounded" required>
    </div>
    <div>
      <label for="address" class="block text-sm">Address</label>
      <textarea id="address" name="address" class="w-full border border-gray-300 p-2 rounded" required></textarea>
    </div>
    <div>
      <label for="postalCode" class="block text-sm">Postal Code</label>
      <input type="text" id="postalCode" name="postalCode" class="w-full border border-gray-300 p-2 rounded" required>
    </div>
    <button type="submit" class="bg-[#00A845] text-white py-2 px-4 rounded">Save Address</button>
  </form>
</div>

<!-- Toastr JS and CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
  document.getElementById('addAddressForm').addEventListener('submit', function(event) {
    // Prevent the default form submission
    event.preventDefault();

    // Show the Toastr message
    toastr.success('Address added successfully!');

    // Submit the form after a short delay (optional)
    setTimeout(() => {
      this.submit(); // Programmatically submit the form
    }, 1000); // Delay of 1 second (1000 milliseconds)
  });
</script>
