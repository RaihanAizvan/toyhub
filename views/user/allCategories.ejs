<%- include('./header') %>
<main class="container mx-auto mt-48 md:mt-16 px-4">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-4xl font-extrabold text-gray-900 mb-4 relative">
            All Categories
            <span class="absolute bottom-0 left-0 w-20 h-1 bg-primary"></span>
        </h1>
        <div class="text-sm text-gray-600 mb-8 flex items-center gap-2">
            <a href="/" class="hover:text-primary transition-colors">Home</a>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span class="text-primary">All Categories</span>
        </div>

        <!-- Category Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            <% if (categories && categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <div class="group relative bg-white rounded-2xl overflow-hidden transform hover:-translate-y-2 transition-all duration-300 hover:shadow-2xl">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                        <div class="h-64 w-full bg-gray-100">
                            <img src="<%= category.image %>" alt="<%= category.name %>" 
                                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500">
                        </div>
                        <div class="p-6 relative z-20">
                            <h2 class="text-xl font-bold text-gray-900 group-hover:text-gray-500 transition-colors duration-300">
                                <%= category.name %>
                            </h2>
                            <p class="text-gray-600 group-hover:text-gray-200 mt-2 transition-colors duration-300">
                                <span class="font-semibold"><%= category.products.length %></span> products available
                            </p>
                            <a href="/categories/<%= category._id %>" 
                               class="mt-4 inline-flex items-center gap-2 text-primary group-hover:text-gray-500 font-medium transition-colors duration-300">
                                Explore Collection
                                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" 
                                     fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full flex flex-col items-center justify-center py-16 bg-gray-50 rounded-2xl">
                    <svg class="w-16 h-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="text-xl text-gray-600">No categories available yet.</p>
                </div>
            <% } %>
        </div>
    </div>
</main>
<%- include('./footer') %>