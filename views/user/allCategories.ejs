<%- include('./header') %>
<main class="container mx-auto my-10">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">
      All Categories
    </h1>
    <div class="text-sm text-gray-600 mb-4">
        <a href="/" class="text-gray-600 hover:text-gray-800">Home</a> > <a href="#"
          class="text-gray-600 hover:text-gray-800">All category</a>
      </div>

    <!-- Category Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
      <% if (categories && categories.length > 0) { %>
        <% categories.forEach(category => { %>
          <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
            <div class="h-48 w-full bg-gray-300 flex justify-center items-center">
              <img src="<%= category.image %>" alt="<%= category.name %>" class="w-full h-full object-cover">
            </div>
            <div class="p-4">
              <h2 class="text-lg font-semibold text-gray-800"><%= category.name %></h2>
              <p class="text-gray-600">Explore <%= category.products.length %> products</p>
              <a href="/categories/<%= category._id %>" class="mt-4 block text-center bg-primary text-white py-2 rounded-md hover:bg-blue-600 transition-colors duration-300">
                View Products
              </a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500 text-lg">No categories available.</p>
      <% } %>
    </div>
</main>
<%- include('./footer') %>